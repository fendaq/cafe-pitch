{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "rootDir": "./src",
        "allowJs": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./lib.d.ts",
        "./src/**/*.ts",
        "./spec/**/*.ts"
    ]
}
